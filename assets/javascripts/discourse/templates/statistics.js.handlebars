{{#if Discourse.SiteSettings.site_teaser}}
<p>{{Discourse.SiteSettings.site_teaser}}</p>
{{/if}}

{{#if view.loading}}
    <i class="fa fa-spin fa-spinner"></i>
{{/if}}

<ul>
    <li>{{i18n topics.title}}: <strong>{{view.statistics.topics}}</strong></li>
    <li>{{i18n replies}}: <strong>{{view.statistics.replies}}</strong></li>
    <li>{{i18n users}}: <strong>{{view.statistics.users}}</strong></li>
</ul>
